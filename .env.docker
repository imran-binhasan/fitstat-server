# Docker Compose Local Environment Variables
# Copy this file to .env.local for local Docker development

# Server Configuration
PORT=4000
NODE_ENV=development

# Database Configuration (for local MongoDB container)
MONGODB_URI=mongodb://admin:password123@mongodb:27017/fitstat-db?authSource=admin
DB_NAME=fitstat-db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-for-local-development
JWT_EXPIRES_IN=4h

# Stripe Configuration (use test keys)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
